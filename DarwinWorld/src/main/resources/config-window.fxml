<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER">

            <Label text="Animal Simulation Game" style="-fx-font-size: 20px; -fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnSpan="2" />

            <Label text="Map Height" GridPane.rowIndex="1" GridPane.columnIndex="0" alignment="CENTER"/>
            <TextField fx:id="mapHeightField" text="15" GridPane.rowIndex="1" GridPane.columnIndex="1" alignment="CENTER"/>

            <Label text="Map Width" GridPane.rowIndex="2" GridPane.columnIndex="0" alignment="CENTER"/>
            <TextField fx:id="mapWidthField" text="15" GridPane.rowIndex="2" GridPane.columnIndex="1" alignment="CENTER"/>

            <Label text="Map Water Level" GridPane.rowIndex="3" GridPane.columnIndex="0" alignment="CENTER"/>
            <TextField fx:id="mapWaterLevelField" text="0.2" GridPane.rowIndex="3" GridPane.columnIndex="1" alignment="CENTER"/>

            <Label text="Map Flows Duration" GridPane.rowIndex="4" GridPane.columnIndex="0" alignment="CENTER"/>
            <TextField fx:id="mapFlowsDurationField" text="5" GridPane.rowIndex="4" GridPane.columnIndex="1" alignment="CENTER"/>

            <Label text="Grass Daily" GridPane.rowIndex="5" GridPane.columnIndex="0" alignment="CENTER"/>
            <TextField fx:id="grassDailyField" text="3" GridPane.rowIndex="5" GridPane.columnIndex="1" alignment="CENTER"/>

            <Label text="Grass Energy" GridPane.rowIndex="6" GridPane.columnIndex="0" alignment="CENTER"/>
            <TextField fx:id="grassEnergyField" text="2" GridPane.rowIndex="6" GridPane.columnIndex="1" alignment="CENTER"/>

            <Label text="Animal Start Number" GridPane.rowIndex="7" GridPane.columnIndex="0" alignment="CENTER"/>
            <TextField fx:id="animalStartNumberField" text="8" GridPane.rowIndex="7" GridPane.columnIndex="1" alignment="CENTER"/>

            <Label text="Animal Start Energy" GridPane.rowIndex="8" GridPane.columnIndex="0" alignment="CENTER"/>
            <TextField fx:id="animalStartEnergyField" text="8" GridPane.rowIndex="8" GridPane.columnIndex="1" alignment="CENTER"/>

            <Label text="Animal Genome Length" GridPane.rowIndex="9" GridPane.columnIndex="0" alignment="CENTER"/>
            <TextField fx:id="animalGenomeLengthField" text="5" GridPane.rowIndex="9" GridPane.columnIndex="1" alignment="CENTER"/>

            <Label text="Animal Min Fed Energy" GridPane.rowIndex="10" GridPane.columnIndex="0" alignment="CENTER"/>
            <TextField fx:id="animalMinFedEnergyField" text="5" GridPane.rowIndex="10" GridPane.columnIndex="1" alignment="CENTER"/>

            <Label text="Animal Birth Cost" GridPane.rowIndex="11" GridPane.columnIndex="0" alignment="CENTER"/>
            <TextField fx:id="animalBirthCostField" text="3" GridPane.rowIndex="11" GridPane.columnIndex="1" alignment="CENTER"/>

            <Button fx:id="startSimulationButton" text="Start Simulation" GridPane.rowIndex="12" GridPane.columnIndex="1" alignment="CENTER"/>
        </GridPane>
    </center>
</BorderPane>
